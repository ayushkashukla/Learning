  <!-- Zoho SalesIQ Widget Code -->
  <script>
    window.$zoho = window.$zoho || {};
    $zoho.salesiq = $zoho.salesiq || {
      ready: function() {
        // Chat is ready
        window.__siqReady = true;
        console.log('‚úÖ Zoho SalesIQ loaded successfully');
        
        try {
          // Update UI status indicators
          const state = document.getElementById('chatState');
          const dot = document.getElementById('chatDot');
          const help = document.getElementById('chatHelp');
          
          if (state) state.textContent = 'Ready';
          if (dot) dot.className = 'inline-block h-2 w-2 rounded-full bg-emerald-500';
          if (help) help.classList.add('hidden');
          
        } catch (e) {
          console.error('‚ùå SalesIQ ready error:', e);
        }
      }
    }
  </script>
  <script id="zsiqscript" src="https://salesiq.zoho.in/widget?wc=siq5a6bf9b37f87abbc3bcef73bcdccdac73b317d68e8eeb917fcd9eca0e5f110b7" defer></script>

  <!-- Chat status detection and troubleshooting -->
  <script>
    window.addEventListener('load', () => {
      const isFile = location.protocol === 'file:';
      const state = document.getElementById('chatState');
      const dot = document.getElementById('chatDot');
      const help = document.getElementById('chatHelp');

      // Check if opened via file:// protocol
      if (isFile) {
        console.warn('‚ö†Ô∏è Page opened via file:// - SalesIQ will not work');
        if (state) state.textContent = 'Blocked on file://';
        if (dot) dot.className = 'inline-block h-2 w-2 rounded-full bg-rose-500';
        if (help) {
          help.textContent = '‚ö†Ô∏è Open this page via http:// or https:// (run a local server) and whitelist your domain in Zoho SalesIQ settings.';
          help.classList.remove('hidden');
        }
        return;
      }

      // Wait for SalesIQ to initialize (timeout after 5 seconds)
      setTimeout(() => {
        if (window.__siqReady) return;
        
        console.warn('‚ö†Ô∏è SalesIQ not detected after 5 seconds');
        if (state) state.textContent = 'Not detected';
        if (dot) dot.className = 'inline-block h-2 w-2 rounded-full bg-amber-500';
        if (help) {
          help.innerHTML = '‚ö†Ô∏è Chat not visible? <strong>Check:</strong> (1) Domain whitelisted in SalesIQ, (2) Ad-blocker disabled, (3) Widget code is correct, (4) Network/firewall not blocking.';
          help.classList.remove('hidden');
        }
      }, 5000);

      // Detect script loading errors
      const scriptEl = document.getElementById('zsiqscript');
      if (scriptEl) {
        scriptEl.addEventListener('error', () => {
          console.error('‚ùå Failed to load SalesIQ script');
          if (state) state.textContent = 'Script failed';
          if (dot) dot.className = 'inline-block h-2 w-2 rounded-full bg-rose-500';
          if (help) {
            help.textContent = '‚ùå The SalesIQ script failed to load. Check your network connection and firewall settings.';
            help.classList.remove('hidden');
          }
        });
      }
    });
  </script>

  <!-- Main application script -->
  <script>
    // --- Helpers ---
    const $ = (sel, root = document) => root.querySelector(sel);
    const $$ = (sel, root = document) => Array.from(root.querySelectorAll(sel));

    function formatInt(n) {
      return new Intl.NumberFormat(undefined, { maximumFractionDigits: 0 }).format(n);
    }

    function toast(message, variant = 'info', timeout = 2400) {
      const host = $('#toastHost');
      const colors = {
        info: 'border-slate-200 bg-white text-slate-900 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-100',
        ok: 'border-emerald-200 bg-emerald-50 text-emerald-900 dark:border-emerald-900/40 dark:bg-emerald-950/30 dark:text-emerald-200',
        warn: 'border-amber-200 bg-amber-50 text-amber-900 dark:border-amber-900/40 dark:bg-amber-950/30 dark:text-amber-200',
        err: 'border-rose-200 bg-rose-50 text-rose-900 dark:border-rose-900/40 dark:bg-rose-950/30 dark:text-rose-200'
      };
      const el = document.createElement('div');
      el.className = `rounded-2xl border p-3 text-sm shadow-lg shadow-slate-900/5 ${colors[variant] || colors.info}`;
      el.textContent = message;
      host.appendChild(el);
      if (timeout > 0) {
        setTimeout(() => {
          el.style.opacity = '0';
          el.style.transform = 'translateY(6px)';
          el.style.transition = 'opacity 250ms ease, transform 250ms ease';
          setTimeout(() => el.remove(), 260);
        }, timeout);
      }
    }

    // --- Theme ---
    const themeBtn = $('#themeBtn');
    const themeIcon = $('#themeIcon');
    const themeLabel = $('#themeLabel');

    function applyTheme(mode) {
      const isDark = mode === 'dark';
      document.documentElement.classList.toggle('dark', isDark);
      themeIcon.textContent = isDark ? 'üåô' : '‚òÄÔ∏è';
      themeLabel.textContent = isDark ? 'Dark' : 'Light';
      themeBtn.setAttribute('aria-pressed', String(isDark));
    }

    function getPreferredTheme() {
      const saved = localStorage.getItem('theme');
      if (saved === 'light' || saved === 'dark') return saved;
      return window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
    }

    let theme = getPreferredTheme();
    applyTheme(theme);

    themeBtn.addEventListener('click', () => {
      theme = document.documentElement.classList.contains('dark') ? 'light' : 'dark';
      localStorage.setItem('theme', theme);
      applyTheme(theme);
      toast(`Theme: ${theme}`, 'ok');
    });

    // --- Mobile menu ---
    const menuBtn = $('#menuBtn');
    const mobileMenu = $('#mobileMenu');

    menuBtn.addEventListener('click', () => {
      const open = mobileMenu.classList.toggle('hidden') === false;
      menuBtn.setAttribute('aria-expanded', String(open));
      menuBtn.setAttribute('aria-label', open ? 'Close menu' : 'Open menu');
    });

    $$('#mobileMenu a').forEach(a => a.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      menuBtn.setAttribute('aria-expanded', 'false');
    }));

    // --- Active section highlight ---
    const navLinks = $$('.nav-link');
    const sectionIds = ['home', 'solutions', 'pricing', 'faq', 'contact'];
    const sections = sectionIds.map(id => document.getElementById(id)).filter(Boolean);

    function setActiveLink(id) {
      navLinks.forEach(a => {
        const isActive = a.getAttribute('href') === `#${id}`;
        a.classList.toggle('bg-slate-100', isActive);
        a.classList.toggle('text-slate-900', isActive);
        a.classList.toggle('dark:bg-slate-900', isActive);
      });
    }

    const io = new IntersectionObserver((entries) => {
      const visible = entries.filter(e => e.isIntersecting).sort((a, b) => b.intersectionRatio - a.intersectionRatio)[0];
      if (visible?.target?.id) setActiveLink(visible.target.id);
    }, { threshold: [0.25, 0.45, 0.65] });

    sections.forEach(s => io.observe(s));

    // --- Clock ---
    const clockEl = $('#clock');
    function tick() {
      const d = new Date();
      clockEl.textContent = d.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit', second: '2-digit' });
    }
    tick();
    setInterval(tick, 1000);

    // --- Reduce motion ---
    const reduceMotionBtn = $('#reduceMotionBtn');
    function applyReducedMotion(reduced) {
      document.documentElement.classList.toggle('reduce-motion', reduced);
      reduceMotionBtn.setAttribute('aria-checked', String(reduced));
      reduceMotionBtn.textContent = reduced ? 'Motion reduced' : 'Reduce motion';
    }
    const savedRM = localStorage.getItem('reduceMotion') === 'true';
    applyReducedMotion(savedRM);

    reduceMotionBtn.addEventListener('click', () => {
      const reduced = !(reduceMotionBtn.getAttribute('aria-checked') === 'true');
      localStorage.setItem('reduceMotion', String(reduced));
      applyReducedMotion(reduced);
      toast(reduced ? 'Reduced motion enabled' : 'Reduced motion disabled', 'ok');
    });

    // --- ROI calculator ---
    const visitors = $('#visitors');
    const lift = $('#lift');
    const visitorsLabel = $('#visitorsLabel');
    const liftLabel = $('#liftLabel');
    const leadsEl = $('#leads');
    const saveCalc = $('#saveCalc');
    const statusEl = $('#status');

    function computeLeads(vis, liftPct) {
      const baseCR = 0.02;
      const lift = 1 + (liftPct / 100);
      const extra = Math.max(0, Math.round(vis * baseCR * (lift - 1)));
      return extra;
    }

    function renderCalc() {
      const v = Number(visitors.value);
      const l = Number(lift.value);
      visitorsLabel.textContent = formatInt(v);
      liftLabel.textContent = `${l}%`;
      leadsEl.textContent = formatInt(computeLeads(v, l));
    }

    // Load saved calculator state
    try {
      const saved = JSON.parse(localStorage.getItem('calc:v1') || 'null');
      if (saved && typeof saved === 'object') {
        if (Number.isFinite(saved.visitors)) visitors.value = String(saved.visitors);
        if (Number.isFinite(saved.lift)) lift.value = String(saved.lift);
      }
    } catch {}

    visitors.addEventListener('input', renderCalc);
    lift.addEventListener('input', renderCalc);
    renderCalc();

    saveCalc.addEventListener('click', () => {
      const payload = { visitors: Number(visitors.value), lift: Number(lift.value) };
      localStorage.setItem('calc:v1', JSON.stringify(payload));
      toast('Saved your estimate', 'ok');
      statusEl.textContent = 'Estimate saved';
      setTimeout(() => (statusEl.textContent = 'Ready'), 1400);
    });

    // --- Testimonials slider ---
    const testimonials = [
      {
        quote: '"We embedded SalesIQ and saw more qualified conversations in the first week."',
        name: 'Riya',
        role: 'Operations'
      },
      {
        quote: '"Clean UI, fast load, and the interactions feel premium without being heavy."',
        name: 'Sam',
        role: 'Founder'
      },
      {
        quote: '"The FAQ and pricing toggle helped us explain value quickly. Great starter."',
        name: 'Aditi',
        role: 'Marketing'
      }
    ];

    const prevBtn = $('#prevTestimonial');
    const nextBtn = $('#nextTestimonial');
    const quoteEl = $('#testimonialQuote');
    const nameEl = $('#testimonialName');
    const roleEl = $('#testimonialRole');

    let tIndex = 0;
    function renderTestimonial() {
      const t = testimonials[tIndex];
      quoteEl.textContent = t.quote;
      nameEl.textContent = t.name;
      roleEl.textContent = t.role;
    }

    function nextTestimonial() {
      tIndex = (tIndex + 1) % testimonials.length;
      renderTestimonial();
    }

    function prevTestimonial() {
      tIndex = (tIndex - 1 + testimonials.length) % testimonials.length;
      renderTestimonial();
    }

    nextBtn.addEventListener('click', nextTestimonial);
    prevBtn.addEventListener('click', prevTestimonial);

    window.addEventListener('keydown', (e) => {
      if (e.key === 'ArrowRight') nextTestimonial();
      if (e.key === 'ArrowLeft') prevTestimonial();
    });

    renderTestimonial();

    // --- Checklist (local persistence) ---
    const checklistForm = $('#checklistForm');
    const checklistInput = $('#checklistInput');
    const checklist = $('#checklist');
    const clearChecklist = $('#clearChecklist');

    const LIST_KEY = 'checklist:v1';

    function loadList() {
      try {
        return JSON.parse(localStorage.getItem(LIST_KEY) || '[]');
      } catch {
        return [];
      }
    }

    function saveList(items) {
      localStorage.setItem(LIST_KEY, JSON.stringify(items));
    }

    function renderList() {
      const items = loadList();
      checklist.innerHTML = '';

      if (items.length === 0) {
        const li = document.createElement('li');
        li.className = 'rounded-2xl border border-dashed border-slate-200 bg-white/60 p-4 text-sm text-slate-600 dark:border-slate-800 dark:bg-slate-950/40 dark:text-slate-300';
        li.textContent = 'No items yet. Add one above.';
        checklist.appendChild(li);
        return;
      }

      items.forEach(item => {
        const li = document.createElement('li');
        li.className = 'flex items-center justify-between gap-3 rounded-2xl border border-slate-200 bg-white p-3 dark:border-slate-800 dark:bg-slate-950';

        const btn = document.createElement('button');
        btn.type = 'button';
        btn.className = 'focus-ring flex min-w-0 flex-1 items-center gap-3 rounded-xl px-2 py-1 text-left';
        btn.setAttribute('aria-label', item.done ? 'Mark as not done' : 'Mark as done');

        const dot = document.createElement('span');
        dot.className = `h-3 w-3 flex-none rounded-full ${item.done ? 'bg-emerald-500' : 'bg-slate-300 dark:bg-slate-700'}`;

        const text = document.createElement('span');
        text.className = `min-w-0 truncate text-sm ${item.done ? 'text-slate-400 line-through dark:text-slate-500' : 'text-slate-800 dark:text-slate-100'}`;
        text.textContent = item.text;

        btn.append(dot, text);

        const del = document.createElement('button');
        del.type = 'button';
        del.className = 'focus-ring rounded-xl border border-slate-200 bg-white px-3 py-2 text-xs font-semibold text-slate-700 hover:bg-slate-50 dark:border-slate-800 dark:bg-slate-950 dark:text-slate-200 dark:hover:bg-slate-900';
        del.textContent = 'Delete';
        del.setAttribute('aria-label', `Delete: ${item.text}`);

        btn.addEventListener('click', () => {
          const items = loadList();
          const idx = items.findIndex(x => x.id === item.id);
          if (idx >= 0) {
            items[idx].done = !items[idx].done;
            saveList(items);
            renderList();
          }
        });

        del.addEventListener('click', () => {
          const items = loadList().filter(x => x.id !== item.id);
          saveList(items);
          renderList();
          toast('Deleted item', 'warn');
        });

        li.append(btn, del);
        checklist.appendChild(li);
      });
    }

    checklistForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const text = checklistInput.value.trim();
      if (!text) {
        toast('Type something to add.', 'warn');
        checklistInput.focus();
        return;
      }
      const items = loadList();
      const id = crypto.randomUUID ? crypto.randomUUID() : String(Date.now() + Math.random());
      items.unshift({ id, text, done: false });
      saveList(items);
      checklistInput.value = '';
      renderList();
      toast('Added item', 'ok');
    });

    clearChecklist.addEventListener('click', () => {
      saveList([]);
      renderList();
      toast('Cleared checklist', 'warn');
    });

    renderList();

    // --- Pricing toggle (monthly/yearly) ---
    const billingToggle = $('#billingToggle');
    const billingKnob = $('#billingKnob');

    function applyBilling(isYearly) {
      billingToggle.setAttribute('aria-checked', String(isYearly));
      billingToggle.classList.toggle('bg-indigo-600', isYearly);
      billingToggle.classList.toggle('bg-slate-200', !isYearly);
      billingToggle.classList.toggle('dark:bg-indigo-500', isYearly);
      billingToggle.classList.toggle('dark:bg-slate-800', !isYearly);
      billingKnob.classList.toggle('translate-x-7', isYearly);

      $$('.price').forEach(el => {
        const m = Number(el.getAttribute('data-month'));
        const y = Number(el.getAttribute('data-year'));
        const v = isYearly ? y : m;
        el.textContent = `$${v}`;
      });

      localStorage.setItem('billingYearly', String(isYearly));
    }

    const savedBilling = localStorage.getItem('billingYearly') === 'true';
    applyBilling(savedBilling);

    billingToggle.addEventListener('click', () => {
      const isYearly = !(billingToggle.getAttribute('aria-checked') === 'true');
      applyBilling(isYearly);
      toast(isYearly ? 'Yearly pricing shown' : 'Monthly pricing shown', 'info');
    });

    // --- Newsletter (client only) ---
    const newsletterForm = $('#newsletterForm');
    const newsletterEmail = $('#newsletterEmail');
    const newsletterHint = $('#newsletterHint');

    function validateEmail(v) {
      return /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(String(v || '').trim());
    }

    const savedEmail = localStorage.getItem('newsletterEmail');
    if (savedEmail) {
      newsletterEmail.value = savedEmail;
      newsletterHint.textContent = `Saved email: ${savedEmail}`;
    }

    newsletterForm.addEventListener('submit', (e) => {
      e.preventDefault();
      const v = newsletterEmail.value.trim();
      if (!validateEmail(v)) {
        toast('Enter a valid email.', 'err');
        newsletterEmail.focus();
        return;
      }
      localStorage.setItem('newsletterEmail', v);
      newsletterHint.textContent = `Saved email: ${v}`;
      toast('Subscribed (saved locally)', 'ok');
    });

    // --- FAQ accordion ---
    $$('.faq-item').forEach((item) => {
      const btn = $('.faq-btn', item);
      const panel = $('.faq-panel', item);
      const icon = $('.faq-icon', item);

      btn.addEventListener('click', () => {
        const open = btn.getAttribute('aria-expanded') === 'true';
        // close others
        $$('.faq-item').forEach(other => {
          const b = $('.faq-btn', other);
          const p = $('.faq-panel', other);
          const i = $('.faq-icon', other);
          b.setAttribute('aria-expanded', 'false');
          p.classList.add('hidden');
          i.textContent = '+';
        });

        // open this if it was closed
        if (!open) {
          btn.setAttribute('aria-expanded', 'true');
          panel.classList.remove('hidden');
          icon.textContent = '‚Äì';
        }
      });
    });

    // --- Contact form validation ---
    const contactForm = $('#contactForm');
    const contactResult = $('#contactResult');
    const fillBtn = $('#fillBtn');
    const sendBtn = $('#sendBtn');
    const openChatBtn = $('#openChatBtn');

    function showError(name, msg) {
      const el = document.querySelector(`[data-error-for="${name}"]`);
      if (!el) return;
      el.textContent = msg;
      el.classList.remove('hidden');
    }

    function clearErrors() {
      $$('[data-error-for]').forEach(el => {
        el.textContent = '';
        el.classList.add('hidden');
      });
    }

    contactForm.addEventListener('submit', (e) => {
      e.preventDefault();
      clearErrors();
      contactResult.classList.add('hidden');

      const fd = new FormData(contactForm);
      const name = String(fd.get('name') || '').trim();
      const email = String(fd.get('email') || '').trim();
      const topic = String(fd.get('topic') || '').trim();
      const message = String(fd.get('message') || '').trim();

      let ok = true;
      if (name.length < 2) { showError('name', 'Please enter your name.'); ok = false; }
      if (!validateEmail(email)) { showError('email', 'Please enter a valid email.'); ok = false; }
      if (!topic) { showError('topic', 'Please choose a topic.'); ok = false; }
      if (message.length < 10) { showError('message', 'Message should be at least 10 characters.'); ok = false; }

      if (!ok) {
        toast('Please fix the highlighted fields.', 'err');
        return;
      }

      sendBtn.disabled = true;
      sendBtn.classList.add('opacity-70');
      sendBtn.textContent = 'Sending‚Ä¶';

      setTimeout(() => {
        sendBtn.disabled = false;
        sendBtn.classList.remove('opacity-70');
        sendBtn.textContent = 'Send';

        contactResult.textContent = `Thanks, ${name}! We received your message about "${topic}". (Demo only)`;
        contactResult.classList.remove('hidden');
        contactForm.reset();
        toast('Message validated successfully', 'ok');
      }, 650);
    });

    fillBtn.addEventListener('click', () => {
      contactForm.querySelector('[name="name"]').value = 'Alex';
      contactForm.querySelector('[name="email"]').value = 'alex@example.com';
      contactForm.querySelector('[name="topic"]').value = 'Live Chat';
      contactForm.querySelector('[name="message"]').value = 'Hi! I want to enable live chat and customize the website.';
      toast('Sample filled', 'info');
    });

    // --- Open chat button (enhanced) ---
    function tryOpenSalesIQ() {
      try {
        // Method 1: Show the floating chat window
        if (window.$zoho?.salesiq?.floatwindow?.visible) {
          window.$zoho.salesiq.floatwindow.visible('show');
          console.log('üí¨ Chat opened via floatwindow.visible');
          return true;
        }
        
        // Method 2: Open the chat window
        if (window.$zoho?.salesiq?.floatwindow?.open) {
          window.$zoho.salesiq.floatwindow.open();
          console.log('üí¨ Chat opened via floatwindow.open');
          return true;
        }
        
        // Method 3: Click the widget button
        if (window.$zoho?.salesiq?.floatbutton?.click) {
          window.$zoho.salesiq.floatbutton.click();
          console.log('üí¨ Chat opened via floatbutton.click');
          return true;
        }
        
        console.warn('‚ö†Ô∏è No SalesIQ API methods available');
      } catch (e) {
        console.error('‚ùå Error opening chat:', e);
      }
      return false;
    }

    openChatBtn?.addEventListener('click', () => {
      if (location.protocol === 'file:') {
        toast('Chat won\'t work on file://. Use http(s) + allowed domain.', 'warn', 3800);
        return;
      }
      
      if (!window.__siqReady) {
        toast('Chat not ready yet. Please wait...', 'info', 3200);
        return;
      }
      
      const success = tryOpenSalesIQ();
      if (success) {
        toast('Opening chat...', 'ok', 1500);
      } else {
        toast('Chat API not available. Check console for details.', 'warn', 3500);
      }
    });

    // --- Footer year ---
    $('#year').textContent = String(new Date().getFullYear());
  </script>
</body>
</html>
